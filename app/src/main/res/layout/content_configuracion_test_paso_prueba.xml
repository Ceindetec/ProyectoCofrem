<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txvConfiguracionConexionPruebaTitle"
        style="@style/StyleTextPrimaryLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/appMarginBottom"
        android:text="@string/configuration_text_title_conexion" />

    <TextView
        android:id="@+id/txvConfiguracionConexionPruebaEsperandoRespuesta"
        style="@style/StyleTextPrimaryMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txvConfiguracionConexionPruebaTitle"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/configuration_text_esperando_respuesta" />


    <TextView
        android:id="@+id/txvConfiguracionConexionPruebaNumCargo"
        style="@style/StyleTextPrimaryMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txvConfiguracionConexionPruebaEsperandoRespuesta"
        android:layout_marginBottom="@dimen/appMarginBottom"
        android:text="@string/configuration_text_estado_conexion"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/txvConfiguracionConexionPruebaResultado"
        style="@style/StyleTextPrimaryMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/txvConfiguracionConexionPruebaNumCargo"
        android:layout_marginBottom="@dimen/appMarginBottom"
        android:text="@string/configuration_text_exitosa"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btnConfiguracionConexionPruebaBotonSalir"
        style="@style/StyleButtonExit"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/txvConfiguracionConexionPruebaResultado"
        android:text="@string/general_text_button_salir" />


</RelativeLayout>